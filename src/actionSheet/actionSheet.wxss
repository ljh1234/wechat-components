.modal {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .5);
    position: fixed;
    left:0;
    top: 0;
    z-index: 10000;
}

.modal .main {
    position:absolute;
    left:0;
    bottom:0;
    width:100%;
    height:auto;
    min-height:200px;
    background-color:#fff;
    z-index:1000;
    opacity:1;
}